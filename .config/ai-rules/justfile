generate-cursor-symlink path:
    #!/bin/bash
    echo "Finding git projects under {{path}}..."
    find "{{path}}" -type d -name ".git" -exec dirname {} \; | while read gitdir; do \
        echo "Processing git project: $gitdir"; \
        (cd "$gitdir" && "{{justfile_directory()}}/scripts/create-symlinks.sh" cursor) || echo "  ‚ùå Error in $gitdir"; \
    done

build-rules:
    ./scripts/build-rules.sh

build-rules-cursor:
    ./scripts/build-rules.sh cursor

build-rules-windsurf:
    ./scripts/build-rules.sh windsurf

build-rules-qoder:
    ./scripts/build-rules.sh qoder

build-rules-claude:
    ./scripts/build-rules.sh claude

