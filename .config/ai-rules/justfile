generate-cursor-symlink path:
    #!/bin/bash
    set -euo pipefail
    echo "Finding git projects under {{path}}..."
    find "{{path}}" -type d -name ".git" -exec dirname {} \; | while read -r gitdir; do \
        echo "Processing git project: $gitdir"; \
        (cd "{{justfile_directory()}}" && go run . create-symlinks cursor --repo-dir "$gitdir") || echo "  ‚ùå Error in $gitdir"; \
    done

build-rules: build-cli
    ./build/ai-rules build

build-cli:
    #!/bin/bash
    set -euo pipefail
    mkdir -p build
    go build -o build/ai-rules .

install:
    #!/bin/bash
    go install .