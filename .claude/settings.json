{
  "permissions": {
    "allow": [
      "Bash(go:*)",
      "Bash(cargo:*)",
      "Bash(pg_isready:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(sed:*)",
      "WebFetch(domain:*)"
    ],
    "deny": [
      "Read(node_modules/**)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"Claude is waiting for you...\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"Claude is done...\""
          }
        ]
      }
    ]
  }
}
