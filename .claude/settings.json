{
  "permissions": {
    "allow": [
      "WebFetch",
      "WebSearch",
      "Glob",
      "Grep",
      "LS",
      "Read",
      "Bash(go:*)",
      "Bash(cargo:*)",
      "Bash(pg_isready:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(sed:*)",
      "Bash(gh repo view:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)"
    ],
    "deny": [
      "Read(node_modules/**)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"Claude is waiting for you...\""
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "say \"Claude is done...\""
          }
        ]
      }
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["Context7", "perplexity-ask", "linear"]
}
