{
  "mcpServers": {
    "Context7": {
      "command": "bunx",
      "args": [
        "@upstash/context7-mcp"
      ]
    },
    "perplexity-ask": {
      "command": "bunx",
      "args": [
        "server-perplexity-ask"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}"
      }
    },
    "linear": {
      "command": "bunx",
      "args": ["mcp-remote", "https://mcp.linear.app/sse"]
    }
  }
}
